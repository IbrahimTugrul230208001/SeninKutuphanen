                    <i class="fas fa-user-plus"></i>
                </button>
                <!-- Send Message Button -->
                <button class="rounded-lg bg-green-600 px-4 py-2 text-white shadow-md transition duration-300 hover:bg-green-500">
                    <i class="fas fa-comment"></i>
                </button>
                <!-- Comment Button -->
                <button class="rounded-lg bg-yellow-600 px-4 py-2 text-white shadow-md transition duration-300 hover:bg-yellow-500">
                    <i class="fas fa-comment-dots"></i>
                </button>
