                </div>
            </div>
            <a href="/Kullanici/Kitaplik">
                <button class="w-full rounded-full bg-blue-600 p-2 text-white hover:bg-blue-500">Kütüphaneye Git</button>
            </a>
            <div class="mt-6 max-h-80 overflow-y-auto border border-gray-700">
                <table class="min-w-full table-auto border border-gray-700">
                    <thead class="top-[-2px] sticky border-gray-700 bg-gray-700">
                        <tr>
                            <th class="border-b border-gray-700 px-4 py-3 text-left"></th>
                            <th class="border-b border-gray-700 px-4 py-3 text-left">İsim</th>
                            <th class="border-b border-gray-700 px-4 py-3 text-left">Yazar</th>
                            <th class="border-b border-gray-700 px-4 py-3 text-left">Kategori</th>
                            <th class="border-b border-gray-700 px-4 py-3 text-left">Tamamlanan Sayfalar</th>
                            <th class="border-b border-gray-700 px-4 py-3 text-left">Toplam Sayfa</th>
                        </tr>
                    </thead>
                    <tbody class="h-48 overflow-y-auto bg-gray-900">
                        @{
                            using (var context = new LibraryContext())
                            {
                                var userBookIds = context.UserBooks
                                    .Where(ub => ub.UserAccountId == userId)
                                    .Select(ub => ub.BookId)
                                    .ToList();

                                var libraries = context.Books
                                    .Where(b => userBookIds.Contains(b.Id))
                                    .Select(b => new Book
                                    {
                                        Title = b.Title,
                                        Author = b.Author,
                                        Genre = b.Genre,
                                    })
                                    .ToList();

                                if (libraries.Any())
                                {
                                    foreach (var library in libraries)
                                    {
                                        <tr>
                                            <td class="border-b border-gray-700 px-4 py-2"></td>
                                            <td class="border-b border-gray-700 px-4 py-2 text-gray-200">@library.Title</td>
                                            <td class="border-b border-gray-700 px-4 py-2 text-gray-200">@library.Author</td>
                                            <td class="border-b border-gray-700 px-4 py-2 text-gray-200">@library.Genre</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="bg-gray-900 px-4 py-2 text-center text-gray-500">Veri bulunamadı.</td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="m-5 mt-8 rounded-lg bg-gray-800 p-6 shadow-lg">
        <h2 class="mb-6 text-center text-2xl font-bold text-gray-100">Kullanıcı Vitrini</h2>
        <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5">
