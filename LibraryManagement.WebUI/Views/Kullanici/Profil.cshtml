            </div>

            <!-- Empty (gray) slots -->
            <div class="flex cursor-pointer items-center justify-center rounded-xl bg-gray-700 shadow-inner transition hover:bg-gray-600 hover:scale-105">
                <i class="fas fa-plus text-4xl text-gray-400"></i>
            </div>
        </div>
    </div>
    <script src="/js/ProfileIndex.js"></script>
</body>
</html>
