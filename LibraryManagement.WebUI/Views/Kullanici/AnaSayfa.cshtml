@using LibraryManagement.DataAccess.Concrete
@using LibraryManagement.Entities.Concrete
@{
    LibraryManager _libraryManager = new LibraryManager(new EfLibraryRepository());
    using var context = new LibraryContext();
    int pageSize = 30;
    int page = 1;
    var urlSegments = Context.Request.Path.Value.Split('/', StringSplitOptions.RemoveEmptyEntries);
    if (urlSegments.Length > 2 && int.TryParse(urlSegments[2], out int parsedPage))
    {
        page = parsedPage;
    }
    var totalBooks = context.Books.Count();
    var totalPages = (int)Math.Ceiling((double)totalBooks / pageSize);
    var books = context.Books
        .OrderBy(b => b.Id)
        .Skip((page - 1) * pageSize)
        .Take(pageSize)
        .ToList();
    string userName = ViewData["UserName"].ToString();
    string userProfilePicture = ViewData["UserProfilePicture"].ToString();
    int userId = (int)ViewData["UserId"];
}
