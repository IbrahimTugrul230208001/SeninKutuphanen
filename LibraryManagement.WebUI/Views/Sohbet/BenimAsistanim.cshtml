@using LibraryManagement.Business.Concrete
@using LibraryManagement.DataAccess.Concrete
@using LibraryManagement.DataAccess.Concrete.EntityFrameworkCore
@using LibraryManagement.Entities.Concrete
@using Microsoft.Data.SqlClient
@using System.Data
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SeninKütüphanen</title>
    <link rel="icon" href="/img/logo.png" type="jpeg">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/ChatBot.css">
</head>
<body class="bg-gray-900 text-gray-100">
    @{
        /* Backend context unchanged */
    }
    <nav class="bg-gray-800 text-gray-100 px-6 py-3 top-0 sticky z-50 shadow-lg ring-1 ring-white/5 backdrop-blur-md">
        <div class="mx-auto flex max-w-7xl items-center justify-between">
            <!-- Logo -->
            <div class="flex items-center space-x-3">
                <img src="/img/logo.png" alt="Logo" class="w-12 h-12 rounded-full" />
                <span class="text-lg font-semibold">BenimKitaplığım</span>
            </div>

            <!-- Desktop Menu -->
            <div class="hidden md:flex items-center space-x-6">
                <a href="/Kullanici/Duzenle" class="hover:text-teal-400 transition">Kitaplık</a>
                <a href="/Kullanici/Ayarlar" class="hover:text-teal-400 transition">Ayarlar</a>
                <a href="/Sohbet/BenimAsistanim" class="hover:text-teal-400 transition">BenimAsistanım</a>
            </div>

            <!-- Mobile Menu Button -->
            <button id="menu-btn" class="md:hidden focus:outline-none p-2 hover:bg-gray-700 rounded-md transition">
                <!-- Lucide hamburger icon -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>

        <!-- Mobile Dropdown Menu -->
        <div id="mobile-menu" class="hidden md:hidden bg-gray-800 space-y-2 px-6 py-4 transition-transform duration-300 origin-top">
            <a href="/Kullanici/Duzenle" class="block hover:text-teal-400">Kitaplık</a>
            <a href="/Kullanici/Ayarlar" class="block hover:text-teal-400">Ayarlar</a>
            <a href="/Sohbet/BenimAsistanim" class="block hover:text-teal-400">BenimAsistanım</a>
        </div>
    </nav>

    <!-- Main Chat Container -->
    <div class="p-6 mx-auto max-w-7xl">
        <div id="chat-box" class="bg-gray-800 p-4 space-y-4 h-[calc(100vh-200px)] overflow-y-auto rounded-2xl shadow-lg ring-1 ring-white/10 backdrop-blur-sm transition-colors">
            <!-- Messages injected here -->
        </div>

        <div class="mt-4 relative">
            <input id="user-input" type="text" placeholder="Mesajını yaz..."
                   class="w-full rounded-full bg-gray-700 text-gray-100 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-transparent px-4 py-3 pr-14 transition"
                   onkeydown="checkEnter(event)" />
            <button onclick="sendPrompt()" class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-teal-500 hover:bg-teal-600 text-white w-12 h-12 flex items-center justify-center rounded-full shadow-md transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
                </svg>
            </button>
        </div>
    </div>

    <script>
        const menuBtn = document.getElementById('menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        menuBtn.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
          mobileMenu.classList.toggle('scale-y-0');
        });
    </script>

    <!-- External scripts unchanged -->
    <script src="~/lib/markdown/lib/markdown.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/typewriter-effect@2.18.0/dist/core.js"></script>
    <script src="~/lib/marked/marked.min.js"></script>
    <script src="/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="/js/ChatBot.js"></script>
</body>
</html>