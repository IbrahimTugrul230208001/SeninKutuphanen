@using LibraryManagement.Business.Concrete
@using LibraryManagement.DataAccess.Concrete
@using LibraryManagement.DataAccess.Concrete.EntityFrameworkCore
@using LibraryManagement.Entities.Concrete
@using Microsoft.Data.SqlClient
@using System.Data
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SeninKütüphanen</title>
    <link rel="icon" href="/img/logo.png" type="jpeg">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/ChatBot.css">
</head>
<body class="bg-gray-900 text-gray-100">
    <nav class="sticky top-0 z-50 bg-gray-800 px-6 py-3 text-white shadow-[0_2px_16px_0_rgba(0,0,0,0.24)] border-b border-white/10 backdrop-blur-md">
        <div class="mx-auto flex max-w-7xl items-center justify-between">
            <a href="/Kullanici/Anasayfa/1">
                <div class="flex items-center space-x-3">
                    <img src="/img/logo.png" class="h-[56px] w-[56px] rounded-full">
                    <span class="text-lg font-semibold">BenimKitaplığım</span>
                </div>
            </a>
            <button id="menu-btn" class="text-white focus:outline-none md:hidden">☰</button>
            <div class="flex items-center space-x-4">
                <div class="hidden items-center space-x-6 md:flex">
                    <a href="/Kullanici/Anasayfa/1" class="text-gray-300 hover:text-white">Ana Sayfa</a>
                    <a href="/Kullanici/Duzenle" class="text-gray-300 hover:text-white">Kitaplık</a>
                    <a href="/Sohbet/BenimAsistanim" class="text-gray-300 hover:text-white">BenimAsistanım</a>
                </div>
            </div>
        </div>
        <div id="mobile-menu" class="flex hidden flex-col space-y-2 bg-gray-800 px-6 py-3 md:hidden">
            <a href="/Kullanici/Duzenle" class="text-gray-300 hover:text-white">Kitaplık</a>
            <a href="/Kullanici/Ayarlar" class="text-gray-300 hover:text-white">Ayarlar</a>
        </div>
    </nav>


    <!-- Main Chat Container -->
    <div class="p-6 mx-auto max-w-7xl">
        <div id="chat-box" class="bg-gray-800 p-4 space-y-4 h-[calc(100vh-200px)] overflow-y-auto rounded-2xl shadow-lg ring-1 ring-white/10 backdrop-blur-sm transition-colors">
            <!-- Messages injected here -->
        </div>

        <div class="mt-4 relative">
            <input id="user-input" type="text" placeholder="Mesajını yaz..."
                   class="w-full rounded-full bg-gray-700 text-gray-100 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300 focus:border-transparent px-4 py-3 pr-14 transition"
                   onkeydown="checkEnter(event)" />
            <button onclick="sendPrompt()" class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-gray-100 hover:bg-gray-200 text-black w-10 h-10 flex items-center justify-center rounded-full shadow-md transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
                </svg>
            </button>
        </div>
    </div>

    <script>
        const menuBtn = document.getElementById('menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        menuBtn.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
          mobileMenu.classList.toggle('scale-y-0');
        });

        function checkEnter(event) {
            if (event.key === 'Enter') {
                sendPrompt();
            }
        }
    </script>

    <!-- External scripts unchanged -->
    <script src="https://cdn.jsdelivr.net/npm/typewriter-effect@2.18.0/dist/core.js"></script>
    <script src="~/lib/marked/marked.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dompurify/3.0.9/purify.min.js"></script>
    <script src="/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="/js/ChatBot.js"></script>
</body>
</html>